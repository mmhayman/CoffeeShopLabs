<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.test.models.ItemsEntity" table="items" schema="GCcoffeeshop">
        <id name="userId">
            <column name="userID" sql-type="int(10) unsigned"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="quantity">
            <column name="quantity" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="price">
            <column name="price" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>